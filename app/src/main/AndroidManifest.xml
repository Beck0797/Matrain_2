<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beck.matrain">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.beck.matrain.aboutTextActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.LocalRanking"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.ChooseRankingType"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.beck.matrain.PauseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.LevelsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.FinishActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.LeaderBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.beck.matrain.MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1915468079410759~4054680609" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>